@model IEnumerable<KitchenMIS.Models.Customer>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black-50 pl-3">List of Customer</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Create new User</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                FullName
            </th>
            
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td width="20%">@item.FullName</td>
    <td width="20%">@item.PhoneNumber</td>
    <td width="20%">@item.Email.</td>
    <td width="20%">
        <div class="w-100 btn-group" role="group">
            <a asp-controller="Customer" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info w-75">Update</a>
            <a asp-controller="Customer" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Details</a>
            <a asp-controller="Customer" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
        </div>
    </td>
</tr>
   }
    </tbody>
</table> }
else
{
<p>No items created yet</p>}

</div>