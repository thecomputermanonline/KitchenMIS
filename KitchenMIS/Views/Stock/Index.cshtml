@model IEnumerable<KitchenMIS.Models.Stock>

@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black-50 pl-3">List of Stock</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-controller="Stock" asp-action="Create" class="btn btn-primary">Create New Stock Itemr</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.initialstock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.restocklevel)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td width="20%">@Html.DisplayFor(modelItem => item.item)</td>
            <td width="20%">@Html.DisplayFor(modelItem => item.Category)</td>
            <td width="20%">@Html.DisplayFor(modelItem => item.initialstock)</td>
            <td width="20%"> @Html.DisplayFor(modelItem => item.restocklevel)</td>
            <td width="20%">
                <div class="w-100 btn-group" role="group">
                    <a asp-controller="Stock" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info w-75">Update</a>
                    <a asp-controller="Stock" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Details</a>
                    <a asp-controller="Stock" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                </div>
            </td>
        </tr>}
    </tbody>
</table> }
else
{
<p>No items created yet</p>}

</div>