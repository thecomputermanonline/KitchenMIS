@model IEnumerable<KitchenMIS.Models.Dish>

@{ ViewData["Title"] = "Index"; }

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black-50 pl-3">Dishes</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-controller="Dish" asp-action="Create" class="btn btn-primary">Create new Dish</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DishImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td width="25%"><img src="~/images/@item.DishImage"
             class="rounded-circle"
             height="40" width="40"
             asp-append-version="true" /></td>
    <td width="25%">@Html.DisplayFor(modelItem => item.DishName)</td>
    <td width="25%">@item.Description</td>
    <td width="25%">
        <div class="w-100 btn-group" role="group">
            <a asp-controller="Dish" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info mx-1">Update</a>
            <a asp-controller="Dish" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Details</a>
            <a asp-controller="Dish" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
        </div>
    </td>
</tr>}
    </tbody>
</table> }
else
{
<p>No items created yet</p>}

</div>