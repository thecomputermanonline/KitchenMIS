@model KitchenMIS.Models.OrderItem

@{ ViewData["Title"] = "Create"; }



<div class="row pt-4">

    <h2 class="text-black-50 pl-3">Create New Stock </h2>
    <hr />

</div>
<hr />


<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="OrderId"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="DishId"></label>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="OrderId" class="form-control" />
                        <span asp-validation-for="OrderId" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="DishId" class="form-control" />
                        <span asp-validation-for="DishId" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
