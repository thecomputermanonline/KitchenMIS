@model KitchenMIS.Models.CustomerDetail

@{ ViewData["Title"] = "Create"; }


<div class="row pt-4">

    <h2 class="text-black-50 pl-3">Update Customer Details </h2>
    <hr />

</div>
<hr />


<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Nationality"></label>
                        <input asp-for="Nationality" class="form-control" />
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="BirthDate"></label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="Faith"></label>
                        <input asp-for="Faith" class="form-control" />
                        <span asp-validation-for="Faith" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="Spice"></label>
                        <input asp-for="Spice" class="form-control" />
                        <span asp-validation-for="Spice" class="text-danger"></span>
                    </div>
                    

                </div>
                <div class="form-group row">
                   
                    <div class="col-3">
                        <label asp-for="Protein"></label>
                        <input asp-for="Protein" class="form-control" />
                        <span asp-validation-for="Protein" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="Sex"></label>
                        <input asp-for="Sex" class="form-control" />
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="Status"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="DishId"></label>
                        <input asp-for="DishId" class="form-control" />
                        <span asp-validation-for="DishId" class="text-danger"></span>
                    </div>
                    

                </div>
               
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
